<?php
conectar();

class membro {
	
	function __construct () {

		$this->query = "SELECT nome FROM membro ORDER BY nome";
		$this->membros = mysql_query($this->query) or die (mysql_error());
	}

	function nomes () {
		$ind = 0;
		while($this->dados = mysql_fetch_array($this->membros))
		{
			$todos[$ind++] = $this->dados["nome"];
			
		}
		
		return $todos ;
	}

}
?>